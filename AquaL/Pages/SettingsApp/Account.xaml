<Page x:Class="AquaL.Pages.SettingsApp.Account"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AquaL.Pages.SettingsApp"
      mc:Ignorable="d" 
      d:DesignHeight="324" d:DesignWidth="512"
      Title="Account">

    <Grid Background="White" Margin="20,0,20,0">
        <WrapPanel Orientation="Vertical">
            <Label Content="目前登录的账号" FontSize="14" FontWeight="Bold"/>
            <Label Content="您现在以{0}模式，使用{1}为账号"/>
            <Label Content="切换账号" FontSize="14" FontWeight="Bold" Margin="0,20,0,0"/>
            <Label Content="如果您没有购买Minecraft正版，建议选择离线模式登录" />
            <WrapPanel>
                <Button Content="Mojang账号登录" Margin="10,0,20,0"/>
                <Button Content="离线模式登录"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</Page>
